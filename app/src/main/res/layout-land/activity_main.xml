<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nps_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/radius_label_text" />

            <Spinner
                android:id="@+id/nps_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/radius_hint_text"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/length_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/length_label_text" />

            <EditText
                android:id="@+id/length_edit_text"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/length_hint_text"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textColorHint="#757575" />

            <TextView
                android:id="@+id/pressure_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pressure_label_text" />

            <Spinner
                android:id="@+id/pressure_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/pressure_selection_hint_text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/pressure_edit_text"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/pressure_custom_hint_text"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textColorHint="#757575" />

            <Button
                android:id="@+id/calculate_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/calculate_button_text" />

            <TextView
                android:id="@+id/result_label_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingVertical="6dp"
                android:text="@string/result_label_text"
                android:textAlignment="center"
/>

            <!-- Result Output Label -->
            <TextView
                android:id="@+id/result_output_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                tools:text="839"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>